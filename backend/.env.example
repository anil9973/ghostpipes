# Server Configuration
NODE_ENV=production
PORT=5000

# Aurora PostgreSQL (AWS RDS)
DB_HOST=ghostpipes-cluster.cluster-xxxxx.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=ghostpipes
DB_USER=ghostpipes_app
DB_PASSWORD=your-secure-password-here
DB_SSL=true

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Web Push Notifications (VAPID)
# Generate keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-public-vapid-key
VAPID_PRIVATE_KEY=your-private-vapid-key
VAPID_SUBJECT=mailto:admin@ghostpipes.com

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# CORS
CORS_ORIGIN=https://ghostpipes.com,chrome-extension://your-extension-id

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15 minutes