{
	"manifest_version": 3,
	"minimum_chrome_version": "140",
	"offline_enabled": true,
	"name": "GhostPipes",
	"short_name": "GhostPipes",
	"version": "0.0.2",
	"description": "Yahoo Pipes returns from the dead - AI-powered data pipelines",
	"author": "Brahmastra Techeq",
	"icons": {
		"24": "assets/icon.png",
		"128": "assets/icon-128.png"
	},

	"action": {
		"default_icon": {
			"24": "assets/icon.png"
		}
	},

	"options_page": "pipelines/index.html",

	"background": {
		"service_worker": "background/background.js",
		"type": "module"
	},

	"commands": {
		"enableExtension": {
			"suggested_key": {
				"default": "Alt+E"
			},
			"description": "Enable GhostPipes"
		},
		"processData": {
			"suggested_key": {
				"default": "Alt+P"
			},
			"description": "Process selected data"
		},
		"buildPipeline": {
			"suggested_key": {
				"default": "Alt+B"
			},
			"description": "Build pipeline"
		}
	},

	"web_accessible_resources": [
		{
			"resources": ["assets/*", "scripts/*"],
			"matches": ["https://*/*"]
		}
	],

	"permissions": ["activeTab", "alarms", "contextMenus", "downloads", "storage", "scripting", "notifications"],
	"host_permissions": ["https://*/*"]
}
